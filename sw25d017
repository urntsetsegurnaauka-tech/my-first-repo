    <script>
      let rabbit = document.getElementById("rabbit");
      let turtle = document.getElementById("turtle");
      let rabbitScoreEl = document.getElementById("rabbitScore");
      let turtleScoreEl = document.getElementById("turtleScore");
      let startButton = document.getElementById("startButton");
      let posRabbit = 120;
      let posTurtle = 120;
      const step = 80;
      const finish = 1880;
      let gameStarted = false;
      let rabbitWins = 0;
      let turtleWins = 0;

      function startGame() {
        startButton.disabled = true;
        startButton.textContent = "3...";
        setTimeout(() => { startButton.textContent = "2..."; }, 1000);
        setTimeout(() => { startButton.textContent = "1..."; }, 2000);
        setTimeout(() => { 
          startButton.textContent = "–Ø–í–¶–ì–ê–ê–Ø! üèÅ"; 
          gameStarted = true;
          setTimeout(() => { 
            startButton.style.display = "none";
          }, 1500);
        }, 3000);
      }

      function animalFunction(event) {
        if (!gameStarted) return;

        let key = event.key.toLowerCase();
        if (key === "r") {
          posRabbit += step;
          rabbit.style.left = posRabbit + "px";
        } else if (key === "y") {
          posTurtle += step;
          turtle.style.left = posTurtle + "px";
        }

        if (posRabbit >= finish) {
          rabbitWins++;
          rabbitScoreEl.textContent = rabbitWins;
          alert("üèÜüéâ –¢—É—É–ª–∞–π —Ç“Ø—Ä“Ø“Ø–ª–∂ —è–ª–ª–∞–∞! –•—É—Ä–¥–∞–Ω –±–∞–π–∂ –±–æ–ª–æ—Ö–≥“Ø–π —é—É üòé üêá");
          endGame();
        } else if (posTurtle >= finish) {
          turtleWins++;
          turtleScoreEl.textContent = turtleWins;
          alert("üèÜüéâ –ú—ç–ª—Ö–∏–π —è–ª–ª–∞–∞!!! –¢—ç–≤—á—ç—ç—Ä “Ø—Ä–≥—ç–ª–∂ —è–ª–¥–∞–≥ —à“Ø“Ø! üê¢ üí™");
          endGame();
        }
      }

      function endGame() {
        gameStarted = false;
        resetGame();
        startButton.textContent = "–î–∞—Ö–∏–Ω –£—Ä–∞–ª–¥–∞–∞–Ω –≠—Ö–ª“Ø“Ø–ª—ç—Ö";
        startButton.style.display = "block";
        startButton.disabled = false;
      }

      function resetGame() {
        posRabbit = 80;
        posTurtle = 80;
        rabbit.style.left = "120px";
        turtle.style.left = "120px";
      }

      document.addEventListener("keydown", animalFunction);
      startButton.addEventListener("click", startGame);
    </script>
